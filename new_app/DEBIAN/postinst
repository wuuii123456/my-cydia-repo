#!/bin/bash
# Post-installation script for Blank White App

# Set proper permissions
chmod 755 /Applications/BlankWhiteApp.app/BlankWhiteApp
chmod -R 755 /Applications/BlankWhiteApp.app

# Update SpringBoard to recognize the new app
if [ -f /usr/bin/uicache ]; then
    /usr/bin/uicache
fi

# Alternative method for older iOS versions
if [ -f /usr/bin/killall ]; then
    /usr/bin/killall -9 SpringBoard
fi

exit 0
